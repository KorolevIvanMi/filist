#:kivy 2.3.1
#:include design/myScrolingMenu.kv
#:include design/myRating.kv
#:include design/myDropDown.kv
#:include design/myLayout.kv
#:include design/addFilmMenu.kv
#:include design/redactFilmMenu.kv
#:include design/customButtonWith2States
#:include design/myDropDownAddAndRedact

<CustomButtonToGoToOtherScreen>:
    size_hint: (None, None)
    
    mipmap: True
    fit_mode: "fill"

<FillistMainMenu>:
    canvas:
        Color: 
            rgb : 1, 1, 1
        Rectangle: 
            pos: 0,0
            size: root.width, root.height
        Color:
            rgb: 167/255, 115/255, 187/255
        Rectangle:
            pos: 0, 0
            size: root.width /6 , root.height
        Rectangle:
            pos: root.width * 5/6, 0
            size: root.width * 1 / 6 , root.height
        Rectangle:
            pos: root.width/6, root.height - root.height/8
            size: root.width * 4 /6,  root.height / 8
    Label:
        font_size: 100
        center: root.center
        pos: root.width/3.3,  root.height/20 * 17.6
        text: "F i l l i s t"
        font_name: "./fonts/FreeCheese-Regular.otf"
    myLayout:
        pos: root.width/6, 0
        size: root.width*4/6, root.height - root.height/8
    Label:
        color: (136/255,136/255,136/255)
        font_size: 25
        text: 'Фильтры:'
        pos: root.width/10 * 1.97, root.height/10 * 7.2
        font_name: "./fonts/Guidy.ttf"
    Label:
        color: (136/255,136/255,136/255)
        font_size: 25
        text: 'Статус'
        pos: root.width/10 * 1.87, root.height/10 * 6.8
        font_name: "./fonts/Guidy.ttf"
    Label:
        color: (136/255,136/255,136/255)
        font_size: 25
        text: 'Рейтинг'
        pos: root.width/10 * 1.93, root.height/10 * 6.4
        font_name: "./fonts/Guidy.ttf"

    CustomButtonToGoToOtherScreen:
        size: root.width/10* 0.55, root.height/10 * 0.95
        pos: root.width/10 * 8.4, root.height/10 * 0.1
        on_release:root.go_to_addScreen()



<mainScreen>:
    name: "mainScreen"
    FillistMainMenu  
