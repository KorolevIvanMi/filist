<CustomDropdownButton>:
    background_color: 0, 0, 0, 0  # Прозрачный фон
    canvas.before:
        Color:
            rgba: 136/255,136/255,136/255,1  # Цвет кнопки
        RoundedRectangle:
            pos: self.pos  # Убрали смещение - используем обычную позицию
            size: self.size # Чуть уменьшенная высота
            radius: [dp(12),]

    
    
    background_normal: ''
    color: 1, 1, 1, 1
    font_name: "Guidy"
    font_size: 20
    size_hint_y: None
    height: 25  # Уменьшенная высота для создания промежутков
    

<StatusDropdown>:
    canvas.before:
        Color:
            rgba: 136/255,136/255,136/255,0
        Rectangle:
            pos: self.pos
            size: self.size
    margin: [0, 1, 0, 1]