<CustomRatingImage>:
    mipmap: True
    size_hint: (None, None)
    size: 30, 30
    fit_mode: "fill"

<StatefulLabel>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(40)
    canvas.before:
        Color:
            rgba: 230/255, 230/255, 230/255, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(26),]
    Label:
        text: root.name
        font_size: 20
        size_hint_x: 0.2
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: (10,0)
        color: (0,0,0)
    
    Label:
        text: root.genre
        size_hint_x: 0.2
        font_size: 20
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: (10,0)
        color: (0,0,0)
    Label:
        text: root.status
        size_hint_x: 0.15
        font_size: 20
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: (10,0)
        color: (0,0,0)
    AnchorLayout:
        size_hint_x: 0.1
        anchor_x: 'left'
        anchor_y: 'center'
        BoxLayout:
            size_hint: None, None
            size: 150, 30
            spacing: 5
            
            CustomRatingImage:
                id: rating_btn_1
            CustomRatingImage:
                id: rating_btn_2
            CustomRatingImage:
                id: rating_btn_3
            CustomRatingImage:
                id: rating_btn_4
            CustomRatingImage:
                id: rating_btn_5

    Widget:
        size_hint_x: 0.07
        
    
    AnchorLayout:
        size_hint_x: 0.065
        anchor_x: 'left'
        anchor_y: 'center'
        BoxLayout:
            size_hint: None, None
            size: 90, 40
            spacing: 5
            
            CustomButtonWith2States:
                size_hint_x: 0.5
                mipmap: True
                fit_mode: "fill"
                normal_source: "./images/buttons/Redact_btn.png"
                down_source: "./images/buttons/Redact_btn_down.png"
                on_release: root.go_to_update_film()
            
            CustomButtonWith2States:
                size_hint_x: 0.5
                mipmap: True
                fit_mode: "fill"
                normal_source: "./images/buttons/Delete_btn.png"
                down_source: "./images/buttons/Delete_btn_down.png"
                on_release: root.del_btn_realise(self)

<RV>:
    viewclass: 'StatefulLabel'
    RecycleGridLayout:
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        default_size_hint: 1, None
        default_size: 0, dp(50)
        spacing: dp(10)
        # Уменьшаем ширину на 40
        size_hint_x: None
        width: root.width/10 * 9.12
        canvas:
            Color:
                rgba: 1,1,0, 0
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [dp(26),]