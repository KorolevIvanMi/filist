<AddFilmMenu>:
    add_film_btn: add_film_btn
    canvas:
        Color: 
            rgb : 1, 1, 1
        Rectangle: 
            pos: 0,0
            size: root.width, root.height
        Color:
            rgb: 167/255, 115/255, 187/255
        Rectangle:
            pos: 0, 0
            size: root.width /6 , root.height
        Rectangle:
            pos: root.width * 5/6, 0
            size: root.width * 1 / 6 , root.height
        Rectangle:
            pos: root.width/6, root.height - root.height/8
            size: root.width * 4 /6,  root.height / 8
    Label:
        font_size: 70
        center: root.center
        top: root.top
        text: "добавление фильма"
        font_name: "./fonts/calibri.ttf"
    Button:
        id: add_film_btn
        font_size: 40
        text: "Appl"
        font_name: "./fonts/calibri.ttf"
        pos: root.width-self.width*3, 0
        on_release: root.acceptOnRelease()
    Label:
        color: (0,0,0)
        text:'Название фильма:'
        font_name: "./fonts/calibri.ttf"
        font_size: 30        
        pos: root.width / 4.4, root.height/8*6.2
    Label:
        color: (0,0,0)
        text: 'Жанр:'
        font_name: "./fonts/calibri.ttf"
        font_size: 30  
        pos: root.width / 5.4, root.height/8*5.7
    Label:
        color:(0,0,0)
        text: 'Статус:'
        font_name: "./fonts/calibri.ttf"
        font_size: 30  
        pos: root.width / 5.35, root.height/8*5.2
    Label:
        color: (0,0,0)
        text: "Комментарии:"
        font_name: "./fonts/calibri.ttf"
        font_size: 30  
        pos: root.width / 4.73, root.height/8*4.7

<AddFilmMenuScreen>:
    
    name: "AddFilmMenuScreen"
    AddFilmMenu