
<AddFilmMenu>:
    
    status_button: status_button 
    film_name_txt: film_name_txt
    film_genre_txt: film_genre_txt
    film_description_txt: film_description_txt
    rating_layout: rating_layout
    
    canvas:
        Color: 
            rgb : 1, 1, 1
        Rectangle: 
            pos: 0,0
            size: root.width, root.height
        Color:
            rgb: 167/255, 115/255, 187/255
        Rectangle:
            pos: 0, 0
            size: root.width /6 , root.height
        Rectangle:
            pos: root.width * 5/6, 0
            size: root.width * 1 / 6 , root.height
        Rectangle:
            pos: root.width/6, root.height - root.height/8
            size: root.width * 4 /6,  root.height / 8

        Color:
            rgba: 230/255, 230/255, 230/255, 1
        RoundedRectangle:
            size: root.width/10*2, root.height/10* 0.35
            pos: root.width/10*3.3, root.height/ 10 * 8.05
            radius: [15,]
        RoundedRectangle:
            size: root.width/10*2, root.height/10* 0.35
            pos: root.width/10*2.45, root.height/ 10 * 7.42
            radius: [15,]
        RoundedRectangle:
            size: root.width/10*6.27, root.height/10*4.1
            pos: root.width/10*1.8, root.height/10 * 1.4
            radius: [15,]
    
    Label:
        font_size: 100
        size_hint: None, None
        size: root.width/10*2.53, root.height/10* .7
        center: root.center
        pos: root.width/5.5,  root.height/20 * 17.6
        text: "Add-film"
        font_name: "./fonts/FreeCheese-Regular.otf"
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0 
            Rectangle:
                pos: self.pos
                size: self.size
    #тут
    CustomButtonWith2States:
        size_hint: (None, None)
        size: 100, 100
        mipmap: True
        fit_mode: "fill"
        pos:  root.width-self.width*3, 10
        normal_source: "./images/buttons/Apply_btn.png"
        down_source: "./images/buttons/Apply_btn_down.png"
        on_release: root.acceptOnRelease()
    #тут
    CustomButtonWith2States:
        size_hint: (None, None)
        size: 100, 100
        mipmap: True
        fit_mode: "fill"
        pos:  root.width-self.width*2+20, 10
        normal_source: "./images/buttons/Get_back_btn.png"
        down_source: "./images/buttons/Get_back_btn_down.png"
        on_release:root.getBackOnRelease()
    
    Label:
        color: (136/255,136/255,136/255)
        font_size: 30
        size_hint: None, None
        size: root.width/10*1, root.height/10*0.3
        center: root.center
        pos: root.width/5.5,  root.height/10* 8.1
        text: "Название:"
        font_name: "./fonts/Guidy.ttf"
        
    #тут
    Label:
        color: (136/255,136/255,136/255)
        text: 'Жанр:'
        font_name: "./fonts/Guidy.ttf"
        font_size: 30
        size_hint: None, None
        center: root.center
        size: root.width/10*0.5, root.height/10*0.3
        pos: root.width / 5.32, root.height/8*5.96
        canvas.before:
            Color:
                rgba: 1, 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
    #тут
    Label:
        color: (136/255,136/255,136/255)
        text: 'Статус:'
        font_name: "./fonts/Guidy.ttf"
        font_size: 30  
        pos: root.width / 5.35, root.height/8*5.2
    #тут
    Label:
        color: (136/255,136/255,136/255)
        text: 'Рейтинг:'
        font_name: "./fonts/Guidy.ttf"
        font_size: 30  
        pos: root.width / 5.25, root.height/8*4.7
    #тут
    Label:
        color: (136/255,136/255,136/255)
        text: 'Комментарий:'
        font_name: "./fonts/Guidy.ttf"
        font_size: 30  
        pos: root.width / 4.8, root.height/8*4.2
    
    
        
    TextInput:
        id: film_name_txt
        text: ''
        size_hint: None, None
        pos: root.width / 3, root.height/8*6.45
        size: root.width/10*2, root.height/29
        font_size: 20
        background_color: 1, 1, 1, 0
        foreground_color: 0, 0, 0, 1
    #тут
    TextInput:
        id: film_genre_txt
        text: ''
        size_hint: None, None
        pos: root.width / 4, root.height/8*5.95
        size: 400, 36
        font_size: 20
        background_color: 1, 1, 1, 0
        foreground_color: 0, 0, 0, 1
    #тут
    Button:
        id: status_button
        background_color: 0, 0, 0, 0  # Прозрачный фон
        canvas.before:
            Color:
                rgba: 136/255,136/255,136/255, 1  # Цвет кнопки
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [25,]
        text: 'Все'
        size_hint: None, None
        size: 150, 36
        background_normal: ''
        color: 1, 1, 1, 1
        font_name: "./fonts/Guidy.ttf"
        font_size: 20
        pos: root.width / 4  , root.height/8*5.45
        on_release: root.open_status_dropdown()
    #тут
    CustomLayotForRating:
        id:rating_layout
        pos: root.width / 4, root.height/8*4.95
        on_selected_rating: root.on_rating_selected(args[1])
    #тут
    TextInput:
        id: film_description_txt
        text: ''
        size_hint: None, None
        pos: root.width / 6 + 30, 150
        size: 1150, 440
        font_size: 20
        background_color: 230/255, 230/255, 230/255, 0
        foreground_color: 0, 0, 0, 1
<AddFilmMenuScreen>:
    
    name: "AddFilmMenuScreen"
    AddFilmMenu